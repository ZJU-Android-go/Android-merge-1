<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cc.vipazoo.www.ui">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.SignupActivity"
            android:label="Sign Up"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.WelcomeActivity"
            android:label="Welcome"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.TripletActivity"
            android:label="Triplets"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.AddTripletActivity"
            android:label=""
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".view.ListViewTripletActivity"
            android:label="My Triplets"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.EntityActivity"
            android:label="Entities"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.AddEntityActivity"
            android:label=""
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".view.ListViewEntityActivity"
            android:label="My Entities"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>